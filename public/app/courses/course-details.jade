.container
    h1 {{courseDetailCtrl.course.title}}
    .row
        .col-md-6
            h3(ng-show="course.featured") Featured
            h3 Published On {{courseDetailCtrl.course.published | date}}

        .col-md-6
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in courseDetailCtrl.course.tags") {{tag}}